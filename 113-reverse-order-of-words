public String reverseWordsInASentence(String sentence){
    //your flawless code here
    if (sentence == '') {
        return '';
    } else if (sentence == null) {
        return sentence;
    } else {
        List<String> splitedSentence = sentence.split(' ');
    String reverseSentence = '';

    for (Integer i = splitedSentence.size() - 1; i >= 0 ; i--) {
        reverseSentence += splitedSentence.get(i) + ' ';
    }

    return reverseSentence.trim();

    }
    
}